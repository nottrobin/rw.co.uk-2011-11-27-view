<phpunit color="true">
    <testsuites>
      <testsuite name="Test test">
        <directory>./test</directory>
        <exclude>/path/to/exclude</exclude>
      </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="/tmp/report" charset="UTF-8"
             yui="true" highlight="false"
             lowUpperBound="35" highLowerBound="70" />
    </logging>
</phpunit>

